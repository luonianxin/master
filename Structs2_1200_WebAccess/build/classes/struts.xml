<constant name="struts.devMode" value="true" /> 
<constant name="struts.enable.DynamicMethodInvocation" value="true" />
<package name="actions" namespace="/login" extends="struts-default">

       
 		<!-- 根据action的返回值来选择显示的页面，默认的result是name = success -->
        <action name="login*" class="com.struts2.actionTest.LoginAction{1}" >
            <result name="success">
                /user_login_success.jsp
            </result>
        </action>
    <!-- 规定好了后，最简洁的形式之一

        <action name="*_*" class="com.struts2.actionTest.{1}Action" method="{2}"> 
            <result >
                /{1}_{2}_success.jsp
            </result>
        </action>
